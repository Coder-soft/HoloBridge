{
  "name": "holobridge",
  "version": "1.1.0",
  "type": "module",
  "description": "A TypeScript bridge between websites and Discord bots with REST API, WebSocket, and Plugin support",
  "main": "dist/index.js",
  "bin": {
    "holo": "./bin/holo.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "doctor": "node bin/holo.js doctor",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "docs:generate": "typedoc",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "discord",
    "bot",
    "api",
    "bridge",
    "websocket",
    "plugins"
  ],
  "dependencies": {
    "discord.js": "^14.14.1",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "@discordjs/voice": "^0.17.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "helmet": "^7.1.0",
    "swagger-ui-express": "^5.0.0",
    "@zodios/openapi": "^10.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@types/swagger-ui-express": "^4.1.6",
    "typescript": "^5.3.2",
    "tsx": "^4.6.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "vitest": "^1.1.0",
    "@vitest/coverage-v8": "^1.1.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "typedoc": "^0.25.4",
    "typedoc-plugin-markdown": "^3.17.1"
  }
}